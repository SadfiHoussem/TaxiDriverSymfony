{% block rowfluid %}
    <div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>Commentaires</h2>

						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
                                    
                                    

                                    
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable" method='POST'>
						
							  <tr>
								  <th>Id</th>
								  <th>Contenu</th>
								  <th>Date</th>
								  <th>Nom Client</th>
								  <th>Offre</th>
                                                                  <th> Actions </th>
							  </tr>
						 
						
                                                      {% for c in commentaire %}
							 <tr>
                                                             <td>{{ c.idcommentaire }}</td>
                                                             <td>{{ c.contenu }}</td>
                                                             <td>{{ c.date|date('d/m/Y') }}</td>
                                                             <td>{{ c.idclient.prenom }}</td>
                                                             <td>{{ c.idoffre.contenu }}</td>
                                                             <td class="center">
								
                                                         <center>	<a class="btn btn-danger yellow" href="{{path("pidev_taxi_suppCom",{'id':c.idcommentaire})}}">
										<i class="halflings-icon white trash"></i> 
                                                             </a></center>
                                                                       
								</td>  
   
            
                                                          </tr>
                                                        {% endfor %} 
							
						
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    {% endblock %}
