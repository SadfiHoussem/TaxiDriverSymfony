
{% extends "PidevTaxiBundle::layout.html.twig" %}
{% block breadcrumb %}
<ul class="breadcrumb">
				<li>
					<i class="icon-home"></i>
					<a href="index.html">Accueil</a> 
					<i class="icon-angle-right"></i>
				</li>
				<li><a href="#">Gestion responsables agence</a></li>
			</ul>    
{% endblock %}

{% block rowfluid %}
    
    
    <div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>Responsables agence</h2>
						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
                                    
                         
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable" method='POST'>
						
							  <tr>
								  <th>Id</th>
								  <th>Login</th>
								  <th>Mot de passe </th>
								  <th>Nom</th>
								  <th>Prenom</th>
                                                                  <th> Email </th>
                                                                  <th>Telephone</th>
								  <th>Adresse</th>
                                                                  <th> Cin</th>
                                                                  <th> Actions</th>
							  </tr>
						 
						
                                                      {% for r in resp %}
							 <tr>
                                                             <td>{{ r.idrespagence}}</td>
                                                             <td>{{ r.login }}</td>
                                                             <td>{{ r.pwd }}</td>
                                                             <td>{{ r.nom }}</td>
                                                             <td>{{ r.prenom }}</td>
                                                             <td>{{ r.email}}</td>
                                                             <td>{{ r.telephone }}</td>
                                                             <td>{{ r.adresse }}</td>
                                                             <td>{{ r.cin }}</td>
                                                         
                                                             <td>	
									<a class="btn btn-info black" href="{{path("updateResp",{'idresp':r.idrespagence})}}">
										<i class="halflings-icon white edit"></i>  
									</a>
									<a class="btn btn-danger yellow" href="{{path("deleteResp",{'idresp':r.idrespagence})}}">
										<i class="halflings-icon white trash"></i> 
									</a>
								</td>  
   
            
                                                          </tr>
                                                        {% endfor %} 
							
						
					  </table>
 
<div class="container">
 
    <center><a href="{{path("ajoutResp")}}" class="btn btn-info yellow" role="button">Ajouter un nouveau Responsable<img src="{{ asset('images/user-new.gif')}}"/></a></center>

</div>
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    {% endblock %}
