
{% extends "PidevTaxiBundle::layout.html.twig" %}
{% block breadcrumb %}
<ul class="breadcrumb">
				<li>
					<i class="icon-home"></i>
					<a href="index.html">Accueil</a> 
					<i class="icon-angle-right"></i>
				</li>
				<li><a href="#">Gestion clients</a></li>
			</ul>    
{% endblock %}

{% block rowfluid %}
    
    <div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>Clients</h2>
						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
                                    
                         
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable" method='POST'>
						
							  <tr>
								  <th>Id</th>
								  <th>Login</th>
								  <th>Mot de passe </th>
								  <th>Nom</th>
								  <th>Prenom</th>
                                                                  <th> Email </th>
                                                                  <th>Telephone</th>
								  <th>Adresse</th>
                                                                  <th> Cin</th>
                                                                  <th>Etat</th>
                                                                  <th> Actions</th>
							  </tr>
						 
						
                                                      {% for c in client %}
							 <tr>
                                                             <td>{{ c.idclient}}</td>
                                                             <td>{{ c.login }}</td>
                                                             <td>{{ c.pwd }}</td>
                                                             <td>{{ c.nom }}</td>
                                                             <td>{{ c.prenom }}</td>
                                                             <td>{{ c.email}}</td>
                                                             <td>{{ c.telephone }}</td>
                                                             <td>{{ c.adresse }}</td>
                                                             <td>{{ c.cin }}</td>
                                                          <td class="center">
										<span class="label label-success yellow">{{ c.actif }}</span>
									</td>  
                                                             <td class="center">
									
									<a class="btn btn-info black" href="{{path("updateClient",{'idclient':c.idclient})}}">
										<i class="halflings-icon white edit"></i>  
									</a>
									<a class="btn btn-danger yellow" href="{{path("deleteClient",{'idclient':c.idclient})}}">
										<i class="halflings-icon white trash"></i> 
									</a>
								</td>  
   
            
                                                          </tr>
                                                        {% endfor %} 
							
						
					  </table>
 
<div class="container">
 
    <center><a href="{{path("ajoutClient")}}" class="btn btn-info yellow" role="button">Ajouter un nouveau Client<img src="{{ asset('images/user-new.gif')}}"/></a></center>

</div>
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    {% endblock %}
